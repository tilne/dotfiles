# vim:ft=gitconfig
[user]
	email = lanetim@chrobinson.com
	name = Tim Lane
[color]
	ui = auto
[core]
	pager = less -FMRiX
	excludesfile = ~/.gitignore
[push]
	default = simple
	autoSetupRemote = true
[alias]
    dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
    st = status
    ci = commit
    br = branch
    co = checkout
    lg = "log --color --graph --pretty=format:'%C(magenta)%h%Creset -%C(cyan)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --"

[rebase]
	autoStash = true
[credential]
	helper = osxkeychain
